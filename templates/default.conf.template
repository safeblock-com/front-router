map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

upstream server1 {
  server ${SERVER1};
}

upstream server2 {
  server ${SERVER2};
}

upstream server3 {
  server ${SERVER3};
}

server {
  listen ${NGINX_PORT};
  resolver ${NGINX_RESOLVER} valid=30m ipv6=off;

  root /usr/share/nginx/html;

  location /up {
    add_header Content-Type text/plain;
    return 200 'healthy';
  }

  location / {
    try_files $uri @server1 @server2 @server3;
  }

  location @server1 {
    proxy_pass http://server1;
  }
  location @server2 {
    proxy_pass http://server2;
  }
  location @server3 {
    proxy_pass http://server3;
  }
}
